android:textColor="#000000">
</TextView>
<RadioGroup 
        android:id="@+id/registerRadioGroup01" 
        android:orientation="horizontal"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
	      <RadioButton 
	         android:text="男" 
	         android:id="@+id/registerRadioButton01" 
	         android:textColor="#000000"
	         android:checked="true"
	         android:layout_width="wrap_content" 
	         android:layout_height="wrap_content">
	      </RadioButton>   
	      <RadioButton 
	         android:text="女" 
	         android:id="@+id/registerRadioButton02" 
	         android:layout_width="wrap_content" 
	         android:layout_height="wrap_content"
	         android:textColor="#000000">
	      </RadioButton>  
	  </RadioGroup>
</LinearLayout>
<LinearLayout 
android:layout_height="wrap_content" 
android:layout_width="wrap_content"
