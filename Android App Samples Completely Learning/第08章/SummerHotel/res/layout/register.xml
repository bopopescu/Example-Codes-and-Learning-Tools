<EditText 
android:layout_height="wrap_content" 
android:layout_width="180dip"
android:text=""  
android:password="true"
android:id="@+id/registerEditText03">
</EditText>

</LinearLayout>
<LinearLayout 
android:layout_height="wrap_content" 
android:layout_width="wrap_content"
